@model HomeDetailsViewModel

@{
    ViewBag.PageTitle = "Employee History";
}

<div class="row justify-content-center m-3" >
   <div class="col-sm-8">
       <div class="card">
           <div class="card-header" style=" white-space: nowrap;">
               <h1>@Model.Employee.Name</h1>
           </div>

           @{var imageName = Model.Employee.PhotoPath ?? "person.png"; }
           <div class="card-body text-center">
               <img class="card-img-top imageThumbnail" src="~/images/@imageName" />
               <h4>Employee ID: @Model.Employee.Id</h4>
               <h4>Email: @Model.Employee.Email</h4>
               <h4>Department: @Model.Employee.Department</h4>
           </div>
           <div class="card-footer text-center">
               <a asp-controller="Home" asp-action="Index" asp-route-Id="@Model.Employee.Id" class="btn btn-primary m-1">Back</a>
               <a href="#" class="btn btn-primary m-1">Edit</a>
               <a href="#" class="btn btn-danger m-1">Delete</a>
           </div>
       </div>

   </div>
</div>
