@model IEnumerable<Employee>

@{ 
    ViewBag.PageTitle = "Employees List";
 }

<div class="card-deck">
    @foreach (var emp in Model){ 
        
    <div class="card m-3">
        <div class="card-header text-center">
            <h3>@emp.Name</h3>
        </div>
        <img class="card-img-top" src="~/images/person.png" />
        <div class="card-footer text-center">
            <a href="/Home/Details/@emp.Id" class="btn btn-primary">View</a>
            <a href="#" class="btn btn-primary">Edit</a>
            <a href="#" class="btn btn-danger">Delete</a>
        </div>
    </div>
    }
</div>
