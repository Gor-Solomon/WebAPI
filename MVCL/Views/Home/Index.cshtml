@model IEnumerable<Employee>

@{ 
    ViewBag.PageTitle = "Employees List";
 }

<div class="card-deck">
    @foreach (var emp in Model){ 
    <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
        <div class="card-header text-center">
            <h3>@emp.Name</h3>
        </div>
        @{var imageName = emp.PhotoPath ?? "person.png"; }

        <img class="card-img-top imageThumbnail" src='~/images/@imageName' />
        <div class="card-footer text-center">
            <a asp-controller="Home" asp-action="details" asp-route-id="@emp.Id" class="btn btn-primary m-1">View</a>
            <a href="#" class="btn btn-primary m-1">Edit</a>
            <a href="#" class="btn btn-danger m-1">Delete</a>
        </div>
    </div>
    }
</div>
